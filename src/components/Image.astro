---
interface Props {
	alt: string;
	src: string;
}
const { alt, src } = Astro.props;
---

<div>
    <img class="link-card" src={src} alt={alt}>
</div>
<style>
	.link-card {
        width: 100%;
		display: flex;
		padding: 1px;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
</style>
